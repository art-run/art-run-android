<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member_management.LoginActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="563dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="235dp"
            android:layout_height="197dp"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            app:srcCompat="@mipmap/ic_artrun" />

        <EditText
            android:id="@+id/text_userID"
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/text_userPassword"
            android:layout_width="225dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="로그인" />

        <CheckBox
            android:id="@+id/check_AutoLogin"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="200dp"
            android:text="자동 로그인" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="79dp"
        android:layout_marginTop="40dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/bt_findID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="아이디/비밀번호 찾기" />

        <Button
            android:id="@+id/bt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="계정 생성"
            app:rippleColor="#A39898" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>